 <!-- JSF -->
        <com.sun.faces.version>2.2.13</com.sun.faces.version>
        <javax.el.version>3.0.0</javax.el.version>
    </properties>
 
    <dependencies>
        <!-- Spring -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${springframework.version}</version>
